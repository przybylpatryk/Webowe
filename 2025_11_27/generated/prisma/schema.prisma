generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Wpis {
  id           Int         @id @default(autoincrement())
  kategoria    Kategoria   @relation(fields: [id_kategorii], references: [id])
  id_kategorii Int
  uzytkownik   String      @db.VarChar(50)
  zawartosc    String?
  data_wpisu   DateTime    @default(now())
  komentarz    Komentarz[]
}

model Kategoria {
  id        Int    @id @default(autoincrement())
  kategoria String @db.VarChar(75)
  wpis      Wpis[]
}

model Komentarz {
  id         Int     @id @default(autoincrement())
  wpis       Wpis    @relation(fields: [id_wpisu], references: [id])
  id_wpisu   Int
  uzytkownik String  @db.VarChar(50)
  zawartosc  String?
}
